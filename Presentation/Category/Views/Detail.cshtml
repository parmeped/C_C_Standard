@model Application.Category.Queries.GetCategoryDetail.CategoryDetailModel

@{
    ViewBag.Title = "CategoryDetail";
}

@{
    Layout = "~/Shared/Views/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<table>
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Chargeable.Name</td>
    </tr>
    
</table>
<div class="pull-right">
    @Html.ActionLink("Back to Categories", "Index", "categories")
</div>
