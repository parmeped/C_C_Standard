@model Application.Member.Queries.GetMemberDetail.MemberDetailModel

@{
    ViewBag.Title = "MemberDetail";
}

@{
    Layout = "~/Shared/Views/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<table>
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category.Name</td>
    </tr>
    <tr>
        <th>BirthDate</th>
        <td>@Model.BirthDate</td>
    </tr>
    <tr>
        <th>BalanceSheet</th>
        <td>@Html.ActionLink(Model.BalanceSheet.Balance.ToString(), "Detail", "BalanceSheet", new { Id = Model.BalanceSheet.Id }, null)</td>
        
    </tr>    
</table>
<div class="pull-right">
    @Html.ActionLink("Back to Members", "Index", "members")
</div>
