@model Presentation.Expense.Models.CreateExpenseViewModel

@{
    ViewBag.Title = "ExpenseCreate";
}

@{
    Layout = "~/Shared/Views/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("CreateExpense", "expense", FormMethod.Post, new { @class = "horizontal" }))
{
<div class="form-group">
    <label class="control-label">BalanceSheetId</label>
    <p>@Model.balanceSheetId</p>
    @Html.HiddenFor(m => m.balanceSheetId)
    @*@Html.Hidden("balanceSheetId", 5)*@
</div>
    <div class="form-group">
        <label class="control-label">Chargeable</label>
        @Html.DropDownListFor(p => p.chargeableId, Model.Chargeables, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}
<div class="pull-right">
    @Html.ActionLink("Back to BalanceSheet", "Detail", "balanceSheet")
</div>
